---
import "@fontsource-variable/onest";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="img/png" href="../src/icons/logo.png">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative text-black dark:text-white ">

		<div class="absolute top-0 z-[-2] w-full h-full
			bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">
		
		</div>

		<div class="max-w-6xl px-1 lg:px-10 pt-20 mx-auto">

		

		<slot />

		</div>

	</body>
</html>
<style is:global>
	:root{
	/*los colores que el navegador tiene que entender que vamos a manejar */	
/*el navegador y ale cambia los colores por defecto */
		color-scheme: light dark;
	}
	
	html {
		font-family: "Onest Variable",system-ui, sans-serif;
		background: #13151a;
		scroll-behavior: smooth; /*este hace que se baje el scrol un poco lento, no de golpe */
	}
	
</style>
